<!--Alerts-->
<% flash.each do |message_type, message| %>
  <script type="text/javascript">
    $(document).ready(function(){
      $.notify({
        icon: "fas fa-fw fa-info-circle",
        message: '<%= message.html_safe %>'
      },{
        type: "<%= message_type %>",
        timer: 20000,
        placement: {
          from: "top",
          align: "center"
        }
      });
    });
  </script>
<% end %>
<!--End Alerts-->
