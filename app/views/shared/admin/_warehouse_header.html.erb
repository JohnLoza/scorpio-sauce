<div class="row">
  <div class="col-md-12">
    <div class="card">
      <%= content_tag :h5, Warehouse.model_name.human(count: 1), class: "card-header" %>
      <div class="row">
        <div class="col-md-4 col-xs-12">
          <%= content_tag :span, Warehouse.human_attribute_name(:address),
            class: "font-weight-bold text-uppercase" %><br>
          <%= @warehouse.address %>
        </div>
        <div class="col-md-4 col-xs-12">
          <%= content_tag :span, Warehouse.human_attribute_name(:telephone),
            class: "font-weight-bold text-uppercase" %><br>
          <%= @warehouse.telephone %>
        </div>
        <div class="col-md-4 col-xs-12">
          <%= content_tag :span, Warehouse.human_attribute_name(:city_id),
            class: "font-weight-bold text-uppercase" %><br>
          <%= @warehouse.location %>
        </div>
      </div>
    </div>
  </div>
</div>
