<div class="dashboard-header">
  <nav class="navbar navbar-expand-lg bg-white fixed-top">
    <a class="navbar-brand" href="index.html">Salsa Scorpio</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse " id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto navbar-right-top">
        <li class="nav-item dropdown nav-user">
          <a class="nav-link nav-user-img" href="#" id="navbarDropdownMenuLink2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag current_user.avatar.variant(avatar_variant).processed,
              class: "user-avatar-md rounded-circle" if current_user.avatar.attached? %>
          </a>
          <div class="dropdown-menu dropdown-menu-right nav-user-dropdown" aria-labelledby="navbarDropdownMenuLink2">
            <div class="nav-user-info">
              <%= content_tag :h5, current_user.name, class: "mb-0 text-white nav-user-name" %>
              <span class="status"></span><%= content_tag :span, t("labels.active_session"), class: "ml-2" %>
            </div>
            <%= link_to edit_admin_user_path(current_user), class: "dropdown-item" do %>
              <i class="fas fa-user mr-2"></i> <%= t("labels.account") %>
            <% end if current_user.is_a?(User::ROLES[:admin]) %>
            <a class="dropdown-item" href="#"><i class="fas fa-cog mr-2"></i>Setting</a>
            <%= link_to session_path(current_user), 
              class: "dropdown-item", method: :delete do %>
              <i class="fas fa-fw fa-power-off mr-2"></i> Cerrar sesi√≥n
            <% end %>
          </div>
