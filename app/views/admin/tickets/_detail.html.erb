<div class="row">
  <div class="col-xl-3 col-lg-3 col-md-3 col-md-6 col-sm-6">
    <p class="card-text">
      <%= content_tag :span, Product.model_name.human,
        class: "font-weight-bold text-uppercase" %><br>
      <%= link_to detail.product, admin_product_path(detail.product) %>
    </p>
  </div>

  <div class="col-xl-3 col-lg-3 col-md-3 col-md-6 col-sm-6">
    <p class="card-text">
      <%= content_tag :span, t("labels.units"),
        class: "font-weight-bold text-uppercase" %><br>
      <%= detail.units %>
    </p>
  </div>

  <div class="col-xl-3 col-lg-3 col-md-3 col-md-6 col-sm-6">
    <p class="card-text">
      <%= content_tag :span, t("labels.batch"),
        class: "font-weight-bold text-uppercase" %><br>
      <%= detail.batch %>
    </p>
  </div>

  <div class="col-xl-3 col-lg-3 col-md-3 col-md-6 col-sm-6">
    <p class="card-text">
      <%= content_tag :span, t("labels.sub_total"),
        class: "font-weight-bold text-uppercase" %><br>
      <%= t("labels.currency", ammount: detail.sub_total) %>
    </p>
  </div>
</div>
