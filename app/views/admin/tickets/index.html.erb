<%= provide :title, Ticket.model_name.human(count: 2) %>
<%= provide :page_header, Ticket.model_name.human(count: 2) %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <h5 class="card-header">
        <%= t(".card_title") %>
      </h5>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead class="bg-light">
              <tr class="border-0">
                <%= content_tag :th, Ticket.human_attribute_name(:user), class: "border-0" %>
                <%= content_tag :th, Ticket.human_attribute_name(:client), class: "border-0" %>
                <%= content_tag :th, Ticket.human_attribute_name(:total), class: "border-0" %>
                <%= content_tag :th, Ticket.human_attribute_name(:payment_method), class: "border-0" %>
                <%= content_tag :th, t("labels.date"), class: "border-0" %>
                <%= content_tag :th, t("labels.actions"), class: "border-0" %>
              </tr>
            </thead>
            <tbody>
              <%= render @tickets %>
            </tbody>
          </table>

          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>
    </div>
  </div>
</div>
