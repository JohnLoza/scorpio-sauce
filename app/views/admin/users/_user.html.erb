<tr>
  <td>
    <div class="m-r-10">
      <%= link_to admin_user_path(user) do %>
        <%= image_tag user.avatar.variant(avatar_variant).processed,
          class: "rounded table-img" if user.avatar.attached? %>
      <% end %>
    </div>
  </td>
  <%= content_tag :td, user.name %>
  <%= content_tag :td, user.cellphone %>
  <%= content_tag :td, user.email %>
  <%= content_tag :td, t("roles.#{user.role}") %>
  <td>
    <%= link_to edit_admin_user_path(user),
      class: "btn btn-outline-light btn-sm" do %>
      <i class="fas fa-fw fa-pencil-alt"></i>
    <% end if can? :update, user %>

    <%= link_to admin_user_path(user),
      method: :delete, class: "btn btn-danger btn-sm",
      data: { confirm: t(".you_sure", user: user) } do %>
      <i class="fas fa-fw fa-trash"></i>
    <% end if can? :destroy, user %>
  </td>
</tr>
