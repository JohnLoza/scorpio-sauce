<%= provide :title, Product.model_name.human(count: 2) %>
<%= provide :page_header, Product.model_name.human(count: 2) %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <h5 class="card-header">
        <%= t(".card_title") %>
        <%= link_to new_admin_product_path do %>
          <i class="fas fa-fw fa-plus-circle fa-2x float-right"></i>
        <% end %>
      </h5>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead class="bg-light">
              <tr class="border-0">
                <%= content_tag :th, Product.human_attribute_name(:main_image), class: "border-0" %>
                <%= content_tag :th, Product.human_attribute_name(:name), class: "border-0" %>
                <%= content_tag :th, Product.human_attribute_name(:retail_price), class: "border-0" %>
                <%= content_tag :th, Product.human_attribute_name(:half_wholesale_price), class: "border-0" %>
                <%= content_tag :th, Product.human_attribute_name(:wholesale_price), class: "border-0" %>
                <%= content_tag :th, t("labels.actions"), class: "border-0" %>
              </tr>
            </thead>
            <tbody>
              <%= render @products %>
            </tbody>
          </table>

          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>
    </div>
  </div>
</div>
