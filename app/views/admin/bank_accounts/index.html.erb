<%= provide :title, BankAccount.model_name.human(count: 2) %>
<%= provide :page_header, BankAccount.model_name.human(count: 2) %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <h5 class="card-header">
        <%= t(".card_title") %>
        <%= link_to new_admin_bank_account_path do %>
          <i class="fas fa-fw fa-plus-circle fa-2x float-right"></i>
        <% end if can? :create, BankAccount %>
      </h5>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead class="bg-light">
              <tr class="border-0">
                <%= content_tag :th, BankAccount.human_attribute_name(:bank_name), class: "border-0" %>
                <%= content_tag :th, BankAccount.human_attribute_name(:owner), class: "border-0" %>
                <%= content_tag :th, BankAccount.human_attribute_name(:number), class: "border-0" %>
                <%= content_tag :th, BankAccount.human_attribute_name(:interbank_clabe), class: "border-0" %>
                <%= content_tag :th, BankAccount.human_attribute_name(:rfc), class: "border-0" %>
                <%= content_tag :th, BankAccount.human_attribute_name(:email), class: "border-0" %>
                <%= content_tag :th, t("labels.actions"), class: "border-0" %>
              </tr>
            </thead>
            <tbody>
              <%= render @bank_accounts %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>
