
<% 4.times do |indx = 0| %>
  <div class="product-data block">
    <p><%= content_tag :strong, @stock.product %></p>
    <%= content_tag :p, @stock.batch %>
  </div>

  <div class="block">
    <%= raw @qrcode.as_html %>
  </div>
  <%= tag :hr unless indx >= 3 %>
  <% indx+= 1 %>
<% end %>

<style>
  p { font-size: 12px; }

  table {
    border-width: 0;
    border-style: none;
    border-color: #0000ff;
    border-collapse: collapse;
  }

  td {
    border-left: solid 2px #000;
    padding: 0;
    margin: 0;
    width: 0px;
    height: 2px;
  }

  td.black { border-color: #000; }
  td.white { border-color: #fff; }

  .block { display: inline-block; }
  .product-data { padding-right: 1em; }
  .text-center{ text-align: center; }
</style>
