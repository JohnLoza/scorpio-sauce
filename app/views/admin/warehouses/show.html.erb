<%= provide :title, @warehouse %>
<%= provide :page_header, @warehouse %>

<div class="row">
  <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 col-12">
    <div class="card card-figure">
      <figure class="figure">
        <%= image_tag "warehouse.jpg", class: "img-fluid" %>

        <figcaption class="figure-caption">

        </figcaption>
      </figure>
    </div>
  </div>

  <div class="col-xl-6 col-lg-8 col-md-6 col-sm-12 col-12">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title"><%= yield :title %></h3>
        <p class="card-text">
          <%= content_tag :span, Warehouse.human_attribute_name(:address), 
            class: "font-weight-bold text-uppercase" %><br>
          <%= @warehouse.address %>
        </p>
        <p class="card-text">
          <%= content_tag :span, Warehouse.human_attribute_name(:telephone), 
            class: "font-weight-bold text-uppercase" %><br>
          <%= @warehouse.telephone %>
        </p>
        <p class="card-text">
          <%= content_tag :span, Warehouse.human_attribute_name(:city_id), 
            class: "font-weight-bold text-uppercase" %><br>
          <%= @warehouse.location %>
        </p>
      </div>
    </div>
  </div>
</div>
