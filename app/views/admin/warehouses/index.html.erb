<%= provide :title, Warehouse.model_name.human(count: 2) %>
<%= provide :page_header, Warehouse.model_name.human(count: 2) %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <h5 class="card-header">
        <%= t(".card_title") %>
        <%= link_to new_admin_warehouse_path do %>
          <i class="fas fa-fw fa-plus-circle fa-2x float-right"></i>
        <% end if can? :create, Warehouse %>
      </h5>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead class="bg-light">
              <tr class="border-0">
                <%= content_tag :th, Warehouse.human_attribute_name(:address), class: "border-0" %>
                <%= content_tag :th, Warehouse.human_attribute_name(:telephone), class: "border-0" %>
                <%= content_tag :th, Product.human_attribute_name(:city_id), class: "border-0" %>
                <%= content_tag :th, t("labels.actions"), class: "border-0" %>
              </tr>
            </thead>
            <tbody>
              <%= render @warehouses %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
