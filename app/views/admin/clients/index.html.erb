<%= provide :title, Client.model_name.human(count: 2) %>
<%= provide :page_header, Client.model_name.human(count: 2) %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <h5 class="card-header">
        <%= yield :title %>
      </h5>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead class="bg-light">
              <tr class="border-0">
                <%= content_tag :th, Client.human_attribute_name(:name), class: "border-0" %>
                <%= content_tag :th, Client.human_attribute_name(:user_id), class: "border-0" %>
                <%= content_tag :th, Client.human_attribute_name(:city_id), class: "border-0" %>
                <%= content_tag :th, Client.human_attribute_name(:address), class: "border-0" %>
                <%= content_tag :th, Client.human_attribute_name(:colony), class: "border-0" %>
                <%= content_tag :th, Client.human_attribute_name(:zc), class: "border-0" %>
              </tr>
            </thead>
            <tbody>
              <%= render @clients %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
