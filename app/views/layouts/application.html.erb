<!doctype html>
<html lang="es">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <title><%= yield :title %> | Admin Salsa Scorpio</title>
  </head>
  <body>
    <!-- ============================================================== -->
    <!-- main wrapper -->
    <!-- ============================================================== -->
    <div class="dashboard-main-wrapper">
      <%= render "/shared/admin/top_navbar.html.erb" %>
      <%= render "/shared/admin/left_navbar.html.erb" %>

      <!-- ============================================================== -->
      <!-- wrapper  -->
      <!-- ============================================================== -->
      <div class="dashboard-wrapper">
        <div class="dashboard-ecommerce">
          <div class="container-fluid dashboard-content ">
            <%= render "/shared/admin/page_header.html.erb" %>

            <div class="ecommerce-widget">
              <%= render "/shared/alerts.html.erb" %>
              <%= yield %>
            </div>
          </div>
        </div>
        <%= render "/shared/admin/footer.html.erb" %>
      </div>
      <!-- ============================================================== -->
      <!-- end wrapper  -->
      <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- end main wrapper  -->
    <!-- ============================================================== -->
    <script>
      $(document).on("turbolinks:load", function(){
        $(".navbar").find("a.active").removeClass("active");
        $(".<%= params[:controller].sub "admin/", "" %>-controller").addClass("active");
        $("form").parsley();

        let action = "<%= params[:action] %>";
        if(action == "edit"){
          $(".not-required-edit").removeAttr("required");
        }
      });
    </script>
  </body>
</html>
